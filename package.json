{
  "name": "tiny-toast",
  "version": "1.0.0",
  "description": "Tiny library for JavaScript only message popups",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint",
    "lint": "standard *.js",
    "commit": "commit-wizard",
    "build": "webpack --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bahmutov/tiny-toast.git"
  },
  "files": [
    "index.js",
    "dist"
  ],
  "keywords": [
    "message",
    "popup",
    "alert",
    "javascript",
    "micro",
    "tiny",
    "ui"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/tiny-toast/issues"
  },
  "homepage": "https://github.com/bahmutov/tiny-toast#readme",
  "devDependencies": {
    "pre-git": "3.1.1",
    "standard": "5.4.1",
    "webpack": "1.12.9"
  },
  "config": {
    "pre-git": {
      "commit-msg": ["simple"],
      "pre-commit": [
        "npm run lint",
        "npm run test"
      ],
      "pre-push": [],
      "post-commit": [],
      "post-merge": []
    }
  }
}
